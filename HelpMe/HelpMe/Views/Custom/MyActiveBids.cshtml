@using HelpMe.Helpers
@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

@model IEnumerable<HelpMe.Models.CommentViewModel>

<div class="dashboard-content-container" data-simplebar>
    <div class="dashboard-content-inner">

        <!-- Dashboard Headline -->
        <div class="dashboard-headline">
            <h3>Мои предложения</h3>

            <!-- Breadcrumbs -->
            <nav id="breadcrumbs" class="green">
                <ul>
                    <li><a href="#">Главная</a></li>
                    <li>Мои предложения</li>
                </ul>
            </nav>
        </div>

        <!-- Row -->
        <div class="row">

            <!-- Dashboard Box -->
            <div class="col-xl-12">
                <div class="dashboard-box margin-top-0">

                    <!-- Headline -->
                    <div class="headline">
                        <h3><i class="icon-material-outline-gavel"></i> Список моих предложений</h3>
                    </div>

                    <div class="content">
                        <ul class="dashboard-box-list">
                            @foreach (var i in Model.OrderByDescending(c=>c.CreationDate))
                            {

                                <li>
                                    <!-- Job Listing -->
                                    <div class="job-listing width-adjustment">

                                        <!-- Job Listing Details -->
                                        <div class="job-listing-details">

                                            <!-- Details -->
                                            <div class="job-listing-description">
                                                <h3 class="job-listing-title"><a href="@Url.Action("Details", "Custom", new { id = i.CustomViewModelId })" target="_blank">@i.CustomViewModel.Name</a> <span class="dashboard-status-button yellow">@HtmlExtensions.EnumDisplayNameFor(i.CustomViewModel.Status)</span></h3>
                                                <div class="job-listing-footer">
                                                    <ul>
                                                        <li><i class="icon-material-outline-access-time"></i>Заказ создан @i.CustomViewModel.StartDate</li>
                                                        <li><i class="icon-material-outline-access-time"></i>Сдать до @i.CustomViewModel.EndingDate</li>
                                                    </ul>
                                                    <ul>
                                                        <li><i class="icon-material-outline-access-time"></i>Дата ставки @i.CreationDate</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Task Details -->
                                    <ul class="dashboard-task-info">
                                        <li><strong>@i.OfferPrice руб.</strong><span>Ваша ставка</span></li>
                                        <li>
                                            @if (i.Days != 0)
                                            {
                                                <strong>@i.Days дней</strong>
                                            }
                                            else
                                            {
                                                <strong>@i.Hours часов</strong>
                                            }
                                            <span>Срок выполнения</span>
                                        </li>
                                        <li><strong>@i.Description</strong><span>Комментарий</span></li>
                                    </ul>

                                    <!-- Buttons -->
                                    <div class="buttons-to-right always-visible">
                                        @if (i.CustomViewModel.Status == HelpMe.Models.CustomStatus.Open)
                                        {
                                            <a href="#small-dialog" class="popup-with-zoom-anim button green ripple-effect ico" title="Редактировать" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
                                            <a href="#small-dialog-3" class="button red ripple-effect ico" title="Удалить предложение" data-tippy-placement="top"><i class="icon-feather-trash-2"></i></a>
                                            <!--Pop-up-->
                                            <div id="small-dialog" class="zoom-anim-dialog mfp-hide dialog-with-tabs">


                                                <div class="sign-in-form">

                                                    <ul class="popup-tabs-nav">
                                                        <li><a href="#tab">Редактировать предложение</a></li>
                                                    </ul>
                                                    <div class="popup-tabs-container">

                                                        <!-- Tab -->
                                                        <div class="popup-tab-content" id="tab">

                                                            @using (Ajax.BeginForm("EditComment", new { Id = i.Id }, new AjaxOptions
                                                            {
                                                                InsertionMode = InsertionMode.Replace,
                                                                OnBegin = "return OnBeginEditComment()",
                                                                OnSuccess = "return OnSuccessEditComment(" + i.Id + ")"
                                                            }))
                                                            {
                                                                @Html.AntiForgeryToken()

                                                                @*@Html.Hidden("Id", c.Id.ToString())*@
                                                                @Html.Hidden("UserId", i.UserId.ToString())
                                                                @Html.Hidden("CustomViewModelId", i.CustomViewModelId.ToString())
                                                                @Html.Hidden("CreationDate", i.CreationDate.ToString())

                                                                var timeCount = i.Days;
                                                                string nameTime = "Days";
                                                                if (timeCount == 0)
                                                                {
                                                                    nameTime = "Hours";
                                                                    timeCount = i.Hours;
                                                                }

                                                                <!-- Bidding -->
                                                                <div class="bidding-widget">
                                                                    <!-- Headline -->
                                                                    <span class="bidding-detail">Укажите <strong>стоимость работы:</strong> </span>

                                                                    <!-- Price Slider -->
                                                                    <div class="bidding-value">
                                                                        <span id="edit-comment-bidding-value"></span> руб. <button type="button" id="edit-comment-show-price"><i title="Редактировать" style="color:green" class="icon-line-awesome-pencil"></i></button>
                                                                        <input id="edit-comment-price-value" name="OfferPrice" class="no-spinners" style="margin-bottom:5px; display:none"
                                                                               placeholder="Укажите стоимость" type="number" value="0"
                                                                               oninput="validity.valid||(value='');" min="0" max="50000"
                                                                               data-tippy-placement="top" />
                                                                    </div>

                                                                    <input id="edit-comment-slider-price" class="bidding-slider" type="text" value="@i.CustomViewModel.Price"
                                                                           data-slider-handle="custom" data-slider-currency="$" data-slider-min="0"
                                                                           data-slider-max="50000" data-slider-value="@i.CustomViewModel.Price" data-slider-step="50"
                                                                           data-slider-tooltip="hide" />

                                                                    <!-- Headline -->
                                                                    <span class="bidding-detail margin-top-10">Укажите <strong>срок выполнения:</strong></span>

                                                                    <!-- Fields -->
                                                                    <div class="bidding-fields">
                                                                        <div class="bidding-field">

                                                                            <!-- Quantity Buttons -->
                                                                            <div class="qtyButtons with-border">
                                                                                <div class="qtyDec"></div>
                                                                                <input id="edit-comment-time" class="no-spinners" type="number" min="1" max="100"
                                                                                       step="1" name="@nameTime" value="@timeCount" oninput="validity.valid||(value='');">
                                                                                <div class="qtyInc"></div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="bidding-field">
                                                                            <select class="selectpicker default with-border" id="edit-time-units">
                                                                                @if (nameTime == "Days")
                                                                                {
                                                                                    <option selected value="1">дней</option>
                                                                                    <option value="2">часов</option>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <option value="1">дней</option>
                                                                                    <option selected value="2">часов</option>
                                                                                }
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Headline -->
                                                                <span class="bidding-detail margin-top-10">Добавьте <strong>комментарий:</strong></span>

                                                                <textarea id="edit-comment-desсription" name="Description" cols="30" rows="5" class="with-border" maxlength="200" placeholder="Оставьте своё предложение для заказчика...">@i.Description</textarea>

                                                                <!-- Button -->
                                                                <button class="button full-width button-sliding-icon ripple-effect" type="submit">Сохранить <i class="icon-material-outline-arrow-right-alt"></i></button>
                                                            }
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div id="small-dialog-3" class="zoom-anim-dialog mfp-hide dialog-with-tabs">
                                                <div class="sign-in-form">
                                                    <ul class="popup-tabs-nav">
                                                        <li><a href="#tab">Удалить предложение</a></li>
                                                    </ul>

                                                    <div class="popup-tabs-container">

                                                        <!-- Tab -->
                                                        <div class="popup-tab-content" id="tab">

                                                            <div class="bidding-widget">
                                                                <!-- Headline -->
                                                                <div class="form-actions no-color">
                                                                    <span class="bidding-detail margin-top-30">Действительно хотите удалить предложение?</span>
                                                                </div>
                                                            </div>

                                                            <!-- Button -->
                                                            <button id="delete-comment-button" class="button full-width button-sliding-icon ripple-effect"
                                                                    type="submit" onclick="return OnClickDeleteComment(@i.Id)">
                                                                Удалить предложение <i class="icon-material-outline-arrow-right-alt"></i>
                                                            </button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- Row / End -->
        <!-- Footer -->
        <div class="dashboard-footer-spacer"></div>
        <div class="small-footer margin-top-15">
            <div class="small-footer-copyrights">
                © 2034 <strong>Староста Инкорпорэйтед</strong>. All Rights Reserved.
            </div>
            <ul class="footer-social-links">
                <li>
                    <a href="#" title="Facebook" data-tippy-placement="top">
                        <i class="icon-brand-facebook-f"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="Twitter" data-tippy-placement="top">
                        <i class="icon-brand-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="Google Plus" data-tippy-placement="top">
                        <i class="icon-brand-google-plus-g"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="LinkedIn" data-tippy-placement="top">
                        <i class="icon-brand-linkedin-in"></i>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <!-- Footer / End -->

    </div>
</div>
<!-- Dashboard Content / End -->