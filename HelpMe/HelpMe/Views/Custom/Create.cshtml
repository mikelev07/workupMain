    @Scripts.Render("~/bundles/jqueryval")


    <script>
        var dateToday = new Date();
        $('#EndingDate').datepicker({
                startDate: new Date(),
                language: 'ru',
                autoclose: true,
               format: "dd M yyyy",

        }); //Initialise any date pickers


